#!/bin/sh

run () {
  if ! pgrep $1 ;
  then
    "$@" &
  fi
}

xsetwacom set "Wacom Intuos Pro S Pen stylus" Area 0 0 31496 17717
xinput set-prop "Wacom Intuos Pro S Pen stylus" --type=float "Coordinate Transformation Matrix" 0.5 0 0 0 1 0 0 0 1
xmodmap /home/luna/.Xmodmap
xrandr --output DVI-D-0 --pos 1920x200

run redshift &
run compton -b
run xcape 
nitrogen --restore
~/src/mycroft-core/start-mycroft.sh all

